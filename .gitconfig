[user]
	email = dirk-jan@legionelladossier.nl
	name = DJ
[push]
	default = simple
	followTags = true
[alias]
	pull-all = !git pull && git submodule update --init --recursive
	spush = push --recurse-submodules=on-demand
  lgf = log --graph --topo-order --pretty='format:%C(yellow)%h%C(red)%d %Cblue%aD %Cgreenby %an%Creset -- %s'
	sdiff = !git diff && git submodule foreach 'git diff'
	supdate = submodule update --remote
	quick-stats = ! /usr/local/bin/git-quick-stats
	squash-all = "!f(){ git reset $(git commit-tree HEAD^{tree} -m \"${1:-A new start}\");};f"
[color]
	ui = auto
[core]
  excludesfile = ~/.gitignore
	editor = \"C:\\Users\\djjw\\AppData\\Local\\Programs\\Microsoft VS Code\\Code.exe\" --wait
	autocrlf = false
[pull]
  rebase = true
[winUpdater]
	recentlySeenVersion = 2.24.1.windows.2
